{
  "extends": "expo/tsconfig.base",
   "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleSuffixes": [".android", ".ios", ".native", ""],
    "removeComments": true,
    "jsx": "react-native"
  },
  "include": [
    "app/**/*",
    "app/types/**/*" // Include the types directory if you have one
  ]
}
